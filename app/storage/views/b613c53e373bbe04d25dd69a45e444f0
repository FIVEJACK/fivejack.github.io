			<span style="font-size:20px;"><?php echo $__env->yieldContent('game_title'); ?></span>
			<?php echo $__env->yieldContent('game_button'); ?>
		</div>
		<?php echo $__env->yieldContent('game_attributes'); ?>
	</div>
	<div id="server_box" class="col-sm-4" style="display:none">
		<div class="page-header">
			<span style="font-size:20px;">Servers</span>
			<?php echo $__env->yieldContent('server_add_button'); ?>
		</div>
		<?php echo $__env->yieldContent('server_list'); ?>
	</div>
	<div id="server_attr_box" class="col-sm-4" style="display:none">
